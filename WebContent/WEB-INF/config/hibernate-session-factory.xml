<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.ldcgroup.model.Category</value>
				<value>com.ldcgroup.model.Company</value>
				<value>com.ldcgroup.model.Item</value>
				<value>com.ldcgroup.model.Member</value>
				<value>com.ldcgroup.model.Pay</value>
				<value>com.ldcgroup.model.Point</value>
				<value>com.ldcgroup.model.Rate</value>
				<value>com.ldcgroup.model.Role</value>
				<value>com.ldcgroup.model.Roll</value>
				<value>com.ldcgroup.model.Statement</value>
				<value>com.ldcgroup.model.Task</value>
				<value>com.ldcgroup.model.Term</value>
				<value>com.ldcgroup.model.Trade</value>
				<value>com.ldcgroup.model.Type</value>
			</list>
		</property>
		<property name='mappingResources'>
			<list>
				<value>com/ldcgroup/model/Category.hbm.xml</value>
				<value>com/ldcgroup/model/Company.hbm.xml</value>
				<value>com/ldcgroup/model/Item.hbm.xml</value>
				<value>com/ldcgroup/model/Member.hbm.xml</value>
				<value>com/ldcgroup/model/Pay.hbm.xml</value>
				<value>com/ldcgroup/model/Point.hbm.xml</value>
				<value>com/ldcgroup/model/Rate.hbm.xml</value>
				<value>com/ldcgroup/model/Role.hbm.xml</value>
				<value>com/ldcgroup/model/Roll.hbm.xml</value>
				<value>com/ldcgroup/model/Statement.hbm.xml</value>
				<value>com/ldcgroup/model/Task.hbm.xml</value>
				<value>com/ldcgroup/model/Term.hbm.xml</value>
				<value>com/ldcgroup/model/Trade.hbm.xml</value>
				<value>com/ldcgroup/model/Type.hbm.xml</value>
			</list>
		</property>
	</bean>

	<tx:annotation-driven transaction-manager="transactionManager" />

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
    
</beans>